"os" : "Linux"

// Ignores comments

// Ignores whitespace changes
"os": "linux"

// Escaped strings
"quote" : "\"Magic is a tool. It's neither good nor evil. The wielder decides.\" - Harry Dresden"

// Boolean Logic
"os" : "Linux" and "distro" : "Arch"
"os" : "Linux" AND "distro" : "Arch"
"flavor" : "peach" and not "cone" : "waffle"

// Chained single expression logic
"os" : "Linux" or "MacOS"
"os" : not "windows"
"flavor" : "peach" or not "anchovies"

// Extended case with `:`
"os" : "Linux" or "MacOS" or "FreeBSD" or not "Solaris"

// Expression negation
not "os" : "windows"

